{
	"name": "slm/queue",
	"description": "Laminas module that integrates with various queue management systems",
	"license": "BSD-3-Clause",
	"type": "library",
	"keywords": [
		"laminas",
		"mezzio",
		"queue",
		"job"
	],
	"homepage": "https://github.com/Webador/SlmQueue",
	"authors": [
		{
			"name": "Jurian Sluiman",
			"email": "jurian@juriansluiman.nl",
			"homepage": "http://juriansluiman.nl"
		},
		{
			"name": "MichaÃ«l Gallego",
			"email": "mic.gallego@gmail.com",
			"homepage": "http://www.michaelgallego.fr"
		},
		{
			"name": "Bas Kamer",
			"email": "baskamer@gmail.com"
		},
		{
			"name": "Roel van Duijnhoven",
			"email": "roel.duijnhoven@gmail.com",
			"homepage": "http://www.roelvanduijnhoven.nl"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://composer.srggroup.dev/"
		}
	],
	"require": {
		"php": "^8.3 | ^8.4",
		"ext-json": "*",
		"laminas/laminas-eventmanager": "^3.14.0",
		"laminas/laminas-servicemanager": "^3.23.1",
		"laminas/laminas-stdlib": "^3.20.0",
		"laminas/laminas-cli": "^1.11.0"
	},
	"require-dev": {
		"laminas/laminas-mvc": "^3.8.0",
		"laminas/laminas-modulemanager": "^2.17.0",
		"laminas/laminas-view": "^2.41.0",
		"laminas/laminas-serializer": "^2.18.0",
		"laminas/laminas-i18n": "^2.30.0",
		"laminas/laminas-config": "^3.10.1",
		"phpunit/phpunit": "^10.5.55",
		"srggroup/srg_standards": "v2.0.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^v1.1.2"
	},
	"suggest": {
		"slm/queue-sqs": "If you are using Amazon SQS",
		"slm/queue-beanstalkd": "If you are using Beanstalk",
		"slm/queue-doctrine": "If you are using Doctrine ORM",
		"rnd-cosoft/slm-queue-rabbitmq": "If you are using RabbitMQ"
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.1.x-dev"
		},
		"laminas": {
			"module": "SlmQueue",
			"config-provider": "SlmQueue\\ConfigProvider"
		},
		"phpcodesniffer-search-depth": 5
	},
	"autoload": {
		"psr-4": {
			"SlmQueue\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"SlmQueueTest\\": "tests/src"
		}
	},
	"scripts": {
		"cs-check": "phpcs",
		"cs-fix": "phpcbf",
		"test": [
			"phpunit",
			"@composer test --working-dir=tests/integration/laminas",
			"@composer test --working-dir=tests/integration/mezzio"
		]
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
